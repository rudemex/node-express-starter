{
  "name": "node-express-starter",
  "version": "1.0.0",
  "description": "Starter server express nodejs",
  "scripts": {
    "dev": "nodemon --config ./nodemon.dev.json",
    "mock": "nodemon --config ./nodemon.mock.json",
    "start": "nodemon",
    "build": "node -v",
    "test": "jest --runInBand --coverage",
    "lint": "yarn lint:base ./src ./mock ./test",
    "lint:base": "eslint --fix --ext .js,.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudemex/node-express-starter.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "express",
    "js",
    "javascript",
    "ecmascript"
  ],
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rudemex/node-express-starter/issues"
  },
  "homepage": "https://github.com/rudemex/node-express-starter#readme",
  "signale-logger": {
    "displayFilename": true,
    "displayTimestamp": true,
    "displayDate": true,
    "displayLine": true,
    "timeZone": "America/Argentina/Buenos_Aires",
    "formatDate": "YYYY-MM-DD",
    "formatTime": "HH:mm:ss a"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "signale-logger": "^1.5.0",
    "swagger-jsdoc": "^6.0.2",
    "swagger-ui-express": "^4.1.6",
    "xss": "^1.0.8",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "codecov": "^3.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.4",
    "mock-json-server": "^1.3.6",
    "prettier": "^2.1.1",
    "supertest": "^6.1.3"
  }
}
